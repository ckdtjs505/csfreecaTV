header.header
    .header__column
        a(href=routes.home)
            img(src="/img/rogo.png", alt="", srcset="")
        form(action=routes.search, method="get")
            input(type="text", name="search_query")
            button
                i.fas.fa-search
    .header__column
        if(!user.isAuthenticated)
            ul
                li
                    a(href=`/videos${routes.upload}`)
                        img(src="/img/up-arrow.png", alt="", srcset="")
                li
                    a(href=routes.join) 회원가입
                li
                    a(href=routes.login) 로그인 
        else 
            ul
                li
                    a(href=`/videos${routes.upload}`)
                        img(src="/img/up-arrow.png", alt="", srcset="")
                li
                    a(href=routes.userDetail(user.id)) #{user.id}
                li
                    a(href=routes.logout) logout
