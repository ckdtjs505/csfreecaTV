extends layout/main

block content
    .form-container
        form(action=`/videos${routes.upload}`, method="post")
            label(for="avatar") Video file 
            input(type="file", name="file")
            input(type="text", name="title", placeholder="제목", required = true)
            textarea(type="text", name="desciption", placeholder="설명", required = true)
            input(type="submit", value="업로드")