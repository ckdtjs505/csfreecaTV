extends layout/main

block content
    .form-container
        form(action=`/videos${routes.upload}`, method="post", enctype="multipart/form-data")
            label(for="avatar") Video file 
            input(type="file", name="videoFile", accept="video/*", required = true)
            input(type="text", name="title", placeholder="제목", required = true)
            textarea(type="text", name="description", placeholder="설명", required = true)
            input(type="submit", value="업로드")